{
  "name": "Gif Stopper",
	"description": "Stop animated gif images with the escape key.  Works with Google+",
  "version": "0.1.0",
  "background_page": "background.html",
  "permissions": [
    "tabs", "http://*, https://*"
  ],
	"icons": { "16": "icon16.png",
				"48": "icon48.png",
				"128": "icon128.png"},
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"], 
	  "css": ["style.css"], 
	  "js": ["js.js"]
    }
  ]
}
